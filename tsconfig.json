{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "strict": true,
    "moduleDetection": "auto",
    "jsx": "preserve",
    "jsxFactory": "h",
    "types": ["vite/client", "vue"]
  },
  "include": ["src/**/*"]
}